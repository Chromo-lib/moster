{
  "manifest_version": 2,
  "name": "MosterSites",
  "description": "All in one: Get most visited websites, manage yours downloads, your browser history and capture current tab..",
  "version": "1.0.5",
  "icons": {
    "512": "icons/icon512.png",
    "256": "icons/icon256.png",
    "128": "icons/icon128.png",
    "64": "icons/icon64.png",
    "32": "icons/icon32.png"
  },
  "browser_action": {
    "default_title": "MosterSites",
    "default_popup": "index.html",
    "browser_style": false
  },
  "permissions": [
    "activeTab",
    "history",
    "topSites",
    "downloads",
    "tabs",
    "<all_urls>"
  ]
}